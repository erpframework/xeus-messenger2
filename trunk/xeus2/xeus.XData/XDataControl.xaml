<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="xeus2.xeus.XData.XDataControl"
    Margin="0,4,0,4"
    >
    <StackPanel x:Name="_container" Orientation="Horizontal">
      <Rectangle x:Name="_required" Visibility="Hidden" Fill="{DynamicResource required_design}" Width="10" Height="10"/>
      <TextBlock x:Name="_description" Visibility="Collapsed" Style="{DynamicResource XDataLabel}"/>
    </StackPanel>
</UserControl>
