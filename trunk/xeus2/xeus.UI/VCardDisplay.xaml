<UI:BaseWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UI="clr-namespace:xeus2.xeus.UI;assembly="
    xmlns:Controls="clr-namespace:xeus2.xeus.UI.xeus.UI.Controls;assembly="
    x:Class="xeus2.xeus.UI.VCardDisplay"
    Title="VCardDisplay" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
	 Background="{DynamicResource back_x_design}" MaxHeight="800" MaxWidth="500"
     >
	<StackPanel>
		<ContentPresenter AllowDrop="True" Drop="OnDropFile" DragOver="OnDragOver" ContentTemplate="{DynamicResource FullContactCard}" Content="{Binding}" Margin="10,10,10,10"/>
    	<Controls:VCardControl Margin="10,10,10,10" DataContext="{Binding Path=Card}"/>
	</StackPanel>
</UI:BaseWindow>
