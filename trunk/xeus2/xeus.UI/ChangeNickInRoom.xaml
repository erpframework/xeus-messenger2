<UI:BaseWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UI="clr-namespace:xeus2.xeus.UI;assembly="
    x:Class="xeus2.xeus.UI.ChangeNickInRoom"
    Title="xeus2.xeus.UI" MinWidth="300" SizeToContent="Height" Background="{DynamicResource back_x_design}"
    Foreground="{DynamicResource DefaultTextBrush2}"
    Width="400"
    >
  <StackPanel Margin="10,10,10,0">
    <TextBox x:Name="_nick" TextWrapping="Wrap" Text="{Binding Path=Nick, Mode=OneWay}"/>
    <Button Content="Change" Click="OnChange" HorizontalAlignment="Center" Margin="0,10,0,10"/>
  </StackPanel>
</UI:BaseWindow>
