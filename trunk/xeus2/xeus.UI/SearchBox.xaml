<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="xeus2.xeus.UI.SearchBox"
    >
    <DockPanel>
      <Rectangle Fill="{DynamicResource search_design}" Width="18" Height="18"/>
      <Border Margin="5,0,0,0" Background="{DynamicResource DefaultTextBoxBackBrush}" BorderBrush="{DynamicResource DefaultSelectedBorderBrush}" BorderThickness="1,1,1,1" CornerRadius="2,2,2,2">
      	<Grid>
      		<TextBox x:Name="_text" Margin="0,0,22,0" MinWidth="100" Style="{DynamicResource TransparentTextBoxStyle}" Panel.ZIndex="1"/>
      		<Button Width="12" HorizontalAlignment="Right" Style="{DynamicResource ImageButtonStyle}" Background="{DynamicResource clear_design}"
			Click="ClearClicked" Margin="2,2,4,2" ToolTip="Clear Text" Height="12"/>
      	</Grid>
      </Border>
    </DockPanel>
</UserControl>
