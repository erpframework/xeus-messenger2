<UserControl x:Class="xeus2.xeus.UI.xeus.UI.Controls.UserSearchText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="#99DDDDDD"
			BorderThickness="1,1,1,1" CornerRadius="3,3,3,3" BorderBrush="#FFAAAAAA">
        <Grid>
            <Rectangle Width="16" Height="16"
			Fill="{DynamicResource filter_design}" VerticalAlignment="Center"
                       HorizontalAlignment="Left" Margin="4,2,2,2"/>
            <TextBox x:Name="_textFilter" Style="{DynamicResource TransparentTextBoxStyle}"
				Margin="22,0,16,0" MaxLength="64" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
            <Button Width="12" HorizontalAlignment="Right" Style="{DynamicResource ImageButtonStyle}" Background="{DynamicResource clear_design}"
			                Click="Button_Click" Margin="2,2,4,2" ToolTip="Clear Text" Height="12"/>
        </Grid>
    </Border>
</UserControl>
