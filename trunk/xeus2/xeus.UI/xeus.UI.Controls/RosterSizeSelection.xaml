<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xeus2_xeus_Core="clr-namespace:xeus2.xeus.Core"
    x:Class="xeus2.xeus.UI.xeus.UI.Controls.RosterSizeSelection"
    >

    <UserControl.Resources>
        <xeus2_xeus_Core:DummyContact x:Key="_dc1" />
        <xeus2_xeus_Core:DummyContact x:Key="_dc2" />
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">
        <Border>
            <StackPanel>
                <ContentPresenter Content="{StaticResource _dc1}" ContentTemplate="{DynamicResource MetaContactSmall}"/>
                <ContentPresenter Content="{StaticResource _dc2}" ContentTemplate="{DynamicResource MetaContactSmall}"/>
            </StackPanel>
        </Border>
		<Border>
            <ContentPresenter Content="{StaticResource _dc1}" ContentTemplate="{DynamicResource MetaContactMedium}"/>
        </Border>
        <Border>
            <ContentPresenter Content="{StaticResource _dc2}" ContentTemplate="{DynamicResource MetaContactBig}"/>
        </Border>
    </StackPanel>
</UserControl>
