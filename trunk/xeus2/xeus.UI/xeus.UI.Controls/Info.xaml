<UserControl x:Class="xeus2.xeus.UI.xeus.UI.Controls.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    >
    <Grid Background="#11000000">
			<StackPanel VerticalAlignment="Bottom" x:Name="_buttons" HorizontalAlignment="Right">
			<Button x:Name="_prev" Click="_prev_Click" Width="20" Height="20" Background="{DynamicResource prevpage_design}" Style="{DynamicResource ImageButtonStyle}"  />
            <Button x:Name="_next" Click="_next_Click" Width="20" Height="20" Background="{DynamicResource nextpage_design}" Style="{DynamicResource ImageButtonStyle}"  />
			</StackPanel>
        <ContentPresenter x:Name="_content" MouseDown="_content_MouseDown"
			Cursor="Hand" Margin="0,0,35,0"/>
    </Grid>
</UserControl>
