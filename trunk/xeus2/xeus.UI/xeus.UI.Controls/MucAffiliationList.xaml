<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xeus2_xeus_Core="clr-namespace:xeus2.xeus.Core"
    x:Class="xeus2.xeus.UI.xeus.UI.Controls.MucAffiliationList"
    >
  <UserControl.Resources>
    <!--<ItemsPanelTemplate x:Key="ItemsPanelTemplateMucAff">
      <VirtualizingStackPanel IsItemsHost="True"/>
      <WrapPanel IsItemsHost="True" />
    </ItemsPanelTemplate>-->

    <CollectionViewSource x:Key="MucAffContacts" Source="{Binding Path=AffContacts}">
    </CollectionViewSource>
  </UserControl.Resources>

<Border Margin="3,3,3,3" BorderBrush="{DynamicResource DefaultTextBrush}" BorderThickness="1,1,1,1" CornerRadius="2,2,2,2" Padding="3,3,3,3">	
	<StackPanel>
		<TextBlock Text="{Binding Path=Affiliation}"/>
		<StackPanel Orientation="Horizontal">
			<TextBox x:Name="_name" MinWidth="100" VerticalAlignment="Top"/>
			<Button HorizontalAlignment="Right" Margin="5,0,0,0" VerticalAlignment="Top"
				Click="Add" Content="Add"/>
		</StackPanel>
		<ListBox ItemTemplate="{DynamicResource MucAffContactItem}"
			Background="{x:Null}" BorderBrush="{x:Null}"
			ItemsSource="{Binding Source={StaticResource MucAffContacts}}"
			ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="_list" />
	</StackPanel>
</Border>
</UserControl>
