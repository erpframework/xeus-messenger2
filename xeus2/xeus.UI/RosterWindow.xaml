<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    xmlns:xeus2_xeus_Core="clr-namespace:xeus2.xeus.Core"
    x:Class="xeus2.RosterWindow"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    Title="xeus2" Height="500" Width="300"
    >
	<Window.Resources>
    <ObjectDataProvider x:Key="RosterDS" d:IsDataSource="True" ObjectType="{x:Type xeus2_xeus_Core:Roster}"/>

    <CollectionViewSource x:Key="Contacts" Source="{Binding Path=Instance, Mode=Default, Source={StaticResource RosterDS}}">
      <CollectionViewSource.GroupDescriptions>
        <PropertyGroupDescription PropertyName="Group"/>
      </CollectionViewSource.GroupDescriptions>
    </CollectionViewSource>

    <ObjectDataProvider x:Key="ServicesDS" d:IsDataSource="True" ObjectType="{x:Type xeus2_xeus_Core:Services}"/>

    <CollectionViewSource x:Key="Services" Source="{Binding Path=Instance, Mode=Default, Source={StaticResource ServicesDS}}">
    </CollectionViewSource>

    <CollectionViewSource x:Key="Services2" Source="{Binding Path=Categories, Mode=Default, Source={StaticResource ServicesDS}}">
    </CollectionViewSource>

    <ObjectDataProvider x:Key="AccountDS" d:IsDataSource="True" ObjectType="{x:Type xeus2_xeus_Core:Account}"/>
		<ObjectDataProvider x:Key="EventsDS" d:IsDataSource="True" ObjectType="{x:Type xeus2_xeus_Core:Events}"/>

   
	</Window.Resources>

    <StackPanel>
      
      <ListBox ItemsSource="{Binding Source={StaticResource Contacts}}" Height="100"
               ItemsPanel="{DynamicResource ItemsPanelTemplateRoster}"
               ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemTemplate="{DynamicResource Contact}"
               MouseDoubleClick="RosterMouseDoubleClick"
               x:Name="_roster">
      <ListBox.GroupStyle>
        <GroupStyle>
        <GroupStyle.ContainerStyle>
          <Style TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="{x:Type GroupItem}">
                  <Expander>
                    <Expander.Header>
                        <TextBlock Text="{Binding Path=Name}"/>
                    </Expander.Header>
                  	<ItemsPresenter/>
                  </Expander>
                </ControlTemplate>
              </Setter.Value>
            </Setter>
          </Style>
        </GroupStyle.ContainerStyle>
        </GroupStyle>
      </ListBox.GroupStyle>	      
	  </ListBox>
      
      <!--
      <TreeView ItemsSource="{Binding Source={StaticResource Services}}"
                ItemTemplate="{DynamicResource ServicesTemplate}" Height="300"
                x:Name="_services"/>
      -->

      <TreeView ItemsSource="{Binding Source={StaticResource Services2}}"
                ItemTemplateSelector="{DynamicResource ServiceTemplateSelector}"
                Height="300"
                x:Name="_services"/>

      <ListBox ItemsSource="{Binding Path=Instance, Mode=Default, Source={StaticResource EventsDS}}" Height="100"/>
      
      <TextBlock Text="{Binding Source={StaticResource AccountDS}, Path=Instance.ItemsToDiscover}"/>
      
    </StackPanel>
</Window>
