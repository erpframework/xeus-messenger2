<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:prop="clr-namespace:xeus2.Properties"
    x:Class="xeus2.xeus.UI.Login"
    Title="xeus2.xeus.UI" Height="300" Width="300"
    >
  <StackPanel>
    <TextBlock Text="Server"/>
	<TextBox x:Name="_server"/>
    <TextBlock Text="User"/>
	<TextBox x:Name="_user"/>
    <StackPanel x:Name="_passwordPanel">
	    <TextBlock Text="Password"/>
		<PasswordBox x:Name="_password"/>
    </StackPanel>
    <Button Content="Login" IsDefault="True" Click="OnLogin"/>
  </StackPanel>
</Window>
