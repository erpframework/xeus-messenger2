<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="xeus2.xeus.UI.SingleValueBox"
    Title="xeus2.xeus.UI" MinWidth="300" SizeToContent="Height" Background="{DynamicResource back_x_design}"
    Foreground="{DynamicResource DefaultTextBrush2}"
    Width="400"
    >
  <StackPanel Margin="10,10,10,0">
    <TextBox x:Name="_text" TextWrapping="Wrap"/>
    <Button Click="OnOk" HorizontalAlignment="Center" Margin="0,10,0,10" x:Name="_ok"/>
  </StackPanel>
</Window>