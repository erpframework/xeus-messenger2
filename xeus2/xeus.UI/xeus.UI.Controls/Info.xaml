<UserControl x:Class="xeus2.xeus.UI.xeus.UI.Controls.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    >
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" x:Name="_buttons">
			<Button Content="Next" x:Name="_next" Click="_next_Click"/>
			<Button Content="Previous" x:Name="_prev" Click="_prev_Click"/>
		</StackPanel>
        <ContentPresenter x:Name="_content" Margin="0,30,50,0"/>
    </Grid>
</UserControl>
