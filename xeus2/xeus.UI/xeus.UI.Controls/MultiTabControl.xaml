<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:xeus2_xeus_Controls="clr-namespace:xeus2.xeus.UI.xeus.UI.Controls"
    x:Class="xeus2.xeus.UI.xeus.UI.Controls.MultiTabControl"
   x:Name="UserControl"
    Unloaded="OnUnload"
    >
	
  <UserControl.Resources>
    <DataTemplate x:Key="MultiTabItem" DataType="{x:Type xeus2_xeus_Controls:MultiTabItem}">
		<StackPanel>
        <TextBlock Text="{Binding Path=Name}" Foreground="{DynamicResource TextBoxBorderBrush}" MinWidth="200" TextWrapping="Wrap" HorizontalAlignment="Left"/>
		<CheckBox IsChecked="{Binding Path=IsVisible, Mode=TwoWay}" HorizontalAlignment="Left"/>
		</StackPanel>
    </DataTemplate>	
	</UserControl.Resources>
  
    <DockPanel>
      <ListBox 
               ItemsPanel="{DynamicResource ItemsPanelTemplateRoster}"
			         ItemsSource="{Binding}"
               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
               x:Name="_tabs" ItemTemplate="{DynamicResource MultiTabItem}" BorderThickness="0,0,0,0"
               DockPanel.Dock="Top" Background="{x:Null}" Height="40" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
      <Grid x:Name="_container" DockPanel.Dock="Bottom" Focusable="True"/>
    </DockPanel>
</UserControl>
