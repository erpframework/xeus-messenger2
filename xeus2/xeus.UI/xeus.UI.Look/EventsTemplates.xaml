        </Grid>
		</Border>
    </DataTemplate>

    <DataTemplate DataType="{x:Type xeus2_xeus_Core:EventPresenceChanged}">
        <ContentPresenter Content="{Binding Path=Contact}" ContentTemplate="{DynamicResource MetaContactSmall}"/>
