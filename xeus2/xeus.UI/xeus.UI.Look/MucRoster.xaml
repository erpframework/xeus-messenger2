<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Resource dictionary entries should be defined here. -->

  <ItemsPanelTemplate x:Key="ItemsPanelTemplateMucRoster">
    <!--<VirtualizingStackPanel IsItemsHost="True"/>-->
    <WrapPanel IsItemsHost="True" />
  </ItemsPanelTemplate>

  <DataTemplate x:Key="MucContact">
    <StackPanel>
      <TextBlock Text="{Binding Path=Nick}"/>
      <TextBlock Text="{Binding Path=Affiliation}"/>
      <TextBlock Text="{Binding Path=StatusText}"/>
      <TextBlock Text="{Binding Path=Show}"/>
      <TextBlock Text="{Binding Path=MucStatusCodeText}"/>
    </StackPanel>
  </DataTemplate>

</ResourceDictionary>