<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="xeus2.xeus.UI.AskAuthorization"
    Title="xeus2.xeus.UI" Width="400"
    MinHeight="150" MinWidth="300" Background="{DynamicResource back_x_design}"
    Foreground="{DynamicResource DefaultTextBrush2}"
    x:Name="Window"
    ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Height="150">
	<StackPanel Orientation="Horizontal">
		<ContentPresenter x:Name="_contact" ContentTemplate="{DynamicResource MetaContactBig}" Width="130"/>
		<StackPanel>
			<TextBlock Text="You are asked to authorize the contact"/>
			<RadioButton/>
			<RadioButton/>
		</StackPanel>
	</StackPanel>
</Window>
